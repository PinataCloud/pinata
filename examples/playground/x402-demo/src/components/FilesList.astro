---
// FilesList component - Display uploaded files
---

<div class="card files-card">
  <div class="card-header-row">
    <div class="card-title">
      <svg class="title-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
      </svg>
      <h4>Your Files</h4>
    </div>
    <button id="refresh-files" class="btn btn-sm">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="23 4 23 10 17 10"></polyline>
        <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
      </svg>
      Refresh
    </button>
  </div>

  <div id="files-container" class="files-container">
    <div id="loading-files" class="loading-state">
      <span class="loading"></span>
      <span>Loading files...</span>
    </div>

    <div id="files-list" class="files-list" style="display: none;"></div>

    <div id="no-files" class="empty-state" style="display: none;">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
      </svg>
      <span>No files found</span>
      <span class="empty-hint">Upload your first file above</span>
    </div>
  </div>
</div>

<script>
  let currentFiles = [];

  async function loadFiles() {
    const loadingEl = document.getElementById('loading-files');
    const listEl = document.getElementById('files-list');
    const noFilesEl = document.getElementById('no-files');

    loadingEl.style.display = 'flex';
    listEl.style.display = 'none';
    noFilesEl.style.display = 'none';

    try {
      const response = await fetch('/api/files?limit=50');
      if (!response.ok) throw new Error('Failed to load files');

      const result = await response.json();
      currentFiles = result.files || [];

      if (currentFiles.length === 0) {
        loadingEl.style.display = 'none';
        noFilesEl.style.display = 'flex';
        return;
      }

      // Render files
      listEl.innerHTML = currentFiles.map(file => `
        <div class="file-item">
          <div class="file-info">
            <div class="file-header">
              <svg class="file-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
              </svg>
              <span class="file-name">${file.name || 'Unnamed File'}</span>
            </div>
            <div class="file-meta">
              <div class="meta-item meta-cid">
                <span class="meta-label">CID</span>
                <code class="meta-value cid">${file.cid}</code>
              </div>
              <div class="meta-row">
                <div class="meta-item">
                  <span class="meta-label">Size</span>
                  <span class="meta-value">${formatFileSize(file.size)}</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">Type</span>
                  <span class="meta-value">${file.mime_type || 'Unknown'}</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">Created</span>
                  <span class="meta-value">${window.formatDate(file.created_at)}</span>
                </div>
              </div>
            </div>
          </div>
          <div class="file-actions">
            <button class="btn btn-sm" onclick="attachPaymentInstruction('${file.id}', '${file.cid}', '${(file.name || 'Unnamed File').replace(/'/g, "\\'")}')">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2v20M2 12h20"></path>
              </svg>
              Attach Payment
            </button>
            <button class="btn btn-sm" onclick="viewFileGateway('${file.cid}')">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                <polyline points="15 3 21 3 21 9"></polyline>
                <line x1="10" y1="14" x2="21" y2="3"></line>
              </svg>
              View
            </button>
            <button class="btn btn-danger btn-sm" onclick="deleteFile('${file.id}', '${(file.name || file.cid).replace(/'/g, "\\'")}')">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
              Delete
            </button>
          </div>
        </div>
      `).join('');

      loadingEl.style.display = 'none';
      listEl.style.display = 'flex';

    } catch (error) {
      console.error('Error loading files:', error);
      loadingEl.style.display = 'none';
      window.showAlert('Failed to load files', 'error');
    }
  }

  function formatFileSize(bytes) {
    if (bytes === 0) return '0 B';
    const k = 1024;
    const sizes = ['B', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
  }

  async function deleteFile(fileId, fileName) {
    if (!confirm(`Delete "${fileName}"? This cannot be undone.`)) {
      return;
    }

    try {
      const response = await fetch(`/api/files/${fileId}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.showAlert('File deleted', 'success');
        loadFiles();
      } else {
        const error = await response.json();
        throw new Error(error.error || 'Delete failed');
      }
    } catch (error) {
      console.error('Error deleting file:', error);
      window.showAlert(error.message || 'Delete failed', 'error');
    }
  }

  function attachPaymentInstruction(fileId, cid, fileName) {
    if (window.showPaymentAttachmentModal) {
      window.showPaymentAttachmentModal(fileId, cid, fileName);
    } else {
      window.showAlert('Payment attachment unavailable', 'error');
    }
  }

  function viewFileGateway(cid) {
    const gatewayUrl = `https://x402-test.mypinata.cloud/x402/cid/${cid}`;
    window.open(gatewayUrl, '_blank');
  }

  // Refresh button
  document.getElementById('refresh-files').addEventListener('click', loadFiles);

  // Make functions globally available
  window.refreshFilesList = loadFiles;
  window.deleteFile = deleteFile;
  window.attachPaymentInstruction = attachPaymentInstruction;
  window.viewFileGateway = viewFileGateway;

  // Load files on page load
  loadFiles();
</script>

<style>
  .files-card {
    display: flex;
    flex-direction: column;
  }

  .card-header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .card-title {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .title-icon {
    color: var(--accent-primary);
  }

  .card-title h4 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .btn-sm {
    padding: 0.5rem 0.75rem;
    font-size: 0.75rem;
  }

  .files-container {
    min-height: 150px;
  }

  .loading-state {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 2rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 2rem;
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .empty-hint {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .files-list {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    max-height: 500px;
    overflow-y: auto;
  }

  .file-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.125rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    border-left: 3px solid var(--accent-primary);
    transition: all 0.15s ease;
  }

  .file-item:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--border-hover);
  }

  .file-info {
    flex: 1;
  }

  .file-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .file-icon {
    color: var(--accent-primary);
    flex-shrink: 0;
  }

  .file-name {
    font-size: 0.9375rem;
    color: var(--text-primary);
    font-weight: 500;
    word-break: break-word;
  }

  .file-meta {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .meta-row {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .meta-label {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-value {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .meta-value.cid {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent-primary);
    word-break: break-all;
    background: var(--bg-secondary);
    padding: 0.375rem 0.5rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-color);
  }

  .file-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .file-actions .btn {
    flex: 1;
    min-width: fit-content;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .file-item {
      flex-direction: row;
      align-items: flex-start;
    }

    .file-actions {
      flex-direction: column;
      flex: 0 0 auto;
    }

    .file-actions .btn {
      flex: 0 0 auto;
      width: auto;
    }
  }
</style>
